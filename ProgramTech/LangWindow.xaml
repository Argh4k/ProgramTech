<Window x:Class="ProgramTech.LangWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramTech"
        mc:Ignorable="d"
        Title="" Height="200" Width="300">
    <StackPanel>
        <Border Padding="0, 20">
            <TextBlock Text="Choose language for dictionary" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <ComboBox x:Name="combo_lang" Margin="30, 0" SelectionChanged="combo_lang_SelectionChanged" Loaded="combo_lang_Loaded"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="button_lang_ok" Content="OK" Margin="30" Grid.Column="0" Click="button_lang_ok_Click"/>
            <Button x:Name="button_lang_cancel" Content="Cancel" Margin="30" Grid.Column="1" Click="button_lang_cancel_Click"/>
        </Grid>
    </StackPanel>
</Window>
