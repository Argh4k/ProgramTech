<Window x:Class="ProgramTech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramTech"
        mc:Ignorable="d"
        Title="Scabble Helper" Height="700" Width="1050"
        ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="images/PTBackground2.png"></ImageBrush>
    </Window.Background>
    <StackPanel>
        <!-- Description -->
        <Border Padding="100 200 100 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Letters" FontSize="17" Foreground="White"/>
                <TextBlock Grid.Column="1" Text="Number of results" FontSize="17" Foreground="White"/>
            </Grid>
        </Border>
        <!-- Row of Input-->
        <Border Padding="100 0 100 20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Letters -->
                <Grid Margin="0 0 20 0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txt_char1" MaxLength="1" Foreground="#686868" FontSize="25" Padding="6" TextAlignment="Center" Grid.Column="0" TextChanged="txt_char_TextChanged"/>
                    <TextBox x:Name="txt_char2" MaxLength="1" Foreground="#686868" FontSize="25" Padding="6" TextAlignment="Center" Grid.Column="1" TextChanged="txt_char_TextChanged"/>
                    <TextBox x:Name="txt_char3" MaxLength="1" Foreground="#686868" FontSize="25" Padding="6" TextAlignment="Center" Grid.Column="2" TextChanged="txt_char_TextChanged"/>
                    <TextBox x:Name="txt_char4" MaxLength="1" Foreground="#686868" FontSize="25" Padding="6" TextAlignment="Center" Grid.Column="3" TextChanged="txt_char_TextChanged"/>
                    <TextBox x:Name="txt_char5" MaxLength="1" Foreground="#686868" FontSize="25" Padding="6" TextAlignment="Center" Grid.Column="4" TextChanged="txt_char_TextChanged"/>
                    <TextBox x:Name="txt_char6" MaxLength="1" Foreground="#686868" FontSize="25" Padding="6" TextAlignment="Center" Grid.Column="5" TextChanged="txt_char_TextChanged"/>
                    <TextBox x:Name="txt_char7" MaxLength="1" Foreground="#686868" FontSize="25" Padding="6" TextAlignment="Center" Grid.Column="6" TextChanged="txt_char_TextChanged"/>
                    <TextBox x:Name="txt_char8" MaxLength="1" Foreground="#686868" FontSize="25" Padding="6" TextAlignment="Center" Grid.Column="7" TextChanged="txt_char_TextChanged"/>
                </Grid>
                <!-- number -->
                <TextBox x:Name="txt_result_no" MaxLength="1" Foreground="#686868" FontSize="25" Padding="2" TextAlignment="Center" TextChanged="txt_number_TextChanged" Grid.Column="1"/>
                <!-- Submit button -->
                <Button x:Name="button_submit" Margin="20 0 0 0" Grid.Column="2" Content="Submit" Background="GhostWhite" Foreground="#686868" Click="button_submit_Click"/>
            </Grid>
        </Border>
        <!-- Results -->
        <Border Padding="100 0">
            <DataGrid x:Name="wordsGrid" AutoGenerateColumns="False">
                <DataGrid.Resources>
                    <Style  TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="BorderThickness" Value="0,0,1,2"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Word" IsReadOnly="True" Binding="{Binding Content}" Width="*"/>
                    <DataGridTextColumn Header="Score" IsReadOnly="True" Binding="{Binding Score}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </StackPanel>
</Window>
