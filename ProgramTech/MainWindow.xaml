<Window x:Class="ProgramTech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramTech"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1050">
    <!--Window.Background>
        <ImageBrush ImageSource="images/PTBackground2.png"></ImageBrush>
    </-->
    <StackPanel>
        <!-- Description -->
        <Border Padding="100 200 100 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Letters" FontSize="17" Foreground="White"/>
                <TextBlock Grid.Column="1" Text="Number of results" FontSize="17" Foreground="White"/>
            </Grid>
        </Border>
        <!-- Row of Input-->
        <Border Padding="100 0 100 20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Letters -->
                <Grid Margin="0 0 20 0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox MaxLength="1" Padding="6" Grid.Column="0"/>
                    <TextBox MaxLength="1" Padding="6" Grid.Column="1"/>
                    <TextBox MaxLength="1" Padding="6" Grid.Column="2"/>
                    <TextBox MaxLength="1" Padding="6" Grid.Column="3"/>
                    <TextBox MaxLength="1" Padding="6" Grid.Column="4"/>
                    <TextBox MaxLength="1" Padding="6" Grid.Column="5"/>
                    <TextBox MaxLength="1" Padding="6" Grid.Column="6"/>
                    <TextBox MaxLength="1" Padding="6" Grid.Column="7"/>
                </Grid>
                <!-- number -->
                <TextBox MaxLength="1" Grid.Column="1"/>
                <!-- Submit button -->
                <Button Margin="20 0 0 0" Grid.Column="2" Content="Submit"/>
            </Grid>
        </Border>
        <!-- Results -->
        <Border Padding="100 0">
            <Grid>
                <Label/>
            </Grid>
        </Border>
    </StackPanel>
</Window>
