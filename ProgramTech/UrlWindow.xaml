<Window x:Class="ProgramTech.UrlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramTech"
        mc:Ignorable="d"
        Title="UrlWindow" Height="150" Width="300">
    <StackPanel>
        <Border Padding="0, 10, 0, 0">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Write a link to dictionary." HorizontalAlignment="Center" Padding="0,0,0,4"/>
                <TextBox x:Name="txt_url_dict"/>
            </StackPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="button_url_ok" Content="Accept" Margin="30" Grid.Column="0" Click="button_lang_ok_Click"/>
            <Button x:Name="button_url_cancel" Content="Cancel" Margin="30" Grid.Column="1" Click="button_lang_cancel_Click"/>
        </Grid>
    </StackPanel>
</Window>
